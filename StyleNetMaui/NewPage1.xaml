<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StyleNetMaui.NewPage1"
             BackgroundColor="#8B1020"
             Title="NewPage1">

    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="#1F2933"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="BackgroundColor" Value="#3B82F6"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="TextColor" Value="#1F2933"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="BackgroundColor" Value="#E5E7EB"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="TextColor" Value="#B91C1C"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="BackgroundColor" Value="#FEE2E2"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        <Style x:Key="ProductCardStyle" TargetType="Frame">
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="16"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="BackgroundColor" Value="#FFFFFF"/>
            <Setter Property="BorderColor" Value="#E5E7EB"/>
            <Setter Property="HasShadow" Value="True"/>
        </Style>

    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout>
            <Frame Style="{StaticResource ProductCardStyle}">
                <VerticalStackLayout Spacing="12">

                    <Label
                        Text="Produkty:"
                        HorizontalOptions="Center"/>

                    <Label
                        Text="Ptasie mleczki: 10.99 zł"
                        TextColor="Black"/>

                    <HorizontalStackLayout Spacing="8">
                        <Button
                            Style="{StaticResource PrimaryButtonStyle}"
                            Text="Dodaj do koszyka"/>

                        <Button
                            Style="{StaticResource SecondaryButtonStyle}"
                            Text="Zobacz więcej"/>

                        <Button
                            Style="{StaticResource DangerButtonStyle}"
                            Text="Usuń"/>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
