<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_16_2.NewPage1"
             Title="NewPage1">
    <ScrollView>
        <HorizontalStackLayout>
            <VerticalStackLayout WidthRequest="1000" Padding="30,0" Spacing="25">
            <Border
                WidthRequest="120"
                HeightRequest="120"
                Stroke="Green"
                StrokeThickness="3"
                HorizontalOptions="Center"
                StrokeShape="RoundRectangle 60">

                   <Image
                    Source="pejda.jpg"/>

            </Border>

            <Label Text="Rejestracja"
                FontSize="28"
                FontAttributes="Bold"
                SemanticProperties.HeadingLevel="Level1" />

            <Entry Placeholder="Imie"
                x:Name="EntryImie"
                BackgroundColor="Green"
                TextColor="White" />

            <Entry Placeholder="Email"
                x:Name="EntryEmail"
                BackgroundColor="Green"
                TextColor="White" />

            <Entry Placeholder="Telefon"
                x:Name="EntryTelefon"
                BackgroundColor="Green"
                TextColor="White" />
            <HorizontalStackLayout>
            <Button Text="Zapisz zmiany"
                    x:Name="ZapiszZmianyButton"
                    BackgroundColor="Green"
                    TextColor="White"
                    FontAttributes="Bold" />
                
                <Button Text="Anuluj"
                 x:Name="AnulujButton"
                 BackgroundColor="Red"
                 TextColor="White"
                 FontAttributes="Bold"/>
            
            </HorizontalStackLayout>

        </VerticalStackLayout>
            <VerticalStackLayout WidthRequest="1000">
                <Label 
                    Text="Ustawienia"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level2"/>
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Start">
                    <Label 
                        Text="Powiadomienia"
                        VerticalOptions="Center"/>
                    <Switch
                        IsToggled="False"
                        x:Name="PowiadomieniaSwitch"
                        HorizontalOptions="Center"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Start">
                    <Label 
                        Text="Tryb Ciemny"
                        VerticalOptions="Center"/>
                    <Switch
                        IsToggled="False"
                        x:Name="TrybSwitch"
                        HorizontalOptions="Center"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Start">
                    <Label 
                        Text="Powiadomienia Push"
                        VerticalOptions="Center"/> 
                    <Switch
                        IsToggled="False"
                        x:Name="PushSwitch"
                        HorizontalOptions="Center"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
       </HorizontalStackLayout>
    </ScrollView>
</ContentPage>