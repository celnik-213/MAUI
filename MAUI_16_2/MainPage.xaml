<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_16_2.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Label Text="Rejestracja"

                   FontSize="28"

                   FontAttributes="Bold"

                   SemanticProperties.HeadingLevel="Level1" />

            <Entry Placeholder="Imie"

                   x:Name="EntryImie"

                   BackgroundColor="Green"

                   TextColor="White" />

            <Entry Placeholder="Email"

                   x:Name="EntryEmail"

                   BackgroundColor="Green"

                   TextColor="White" />

            <Entry Placeholder="Hasło"

                   x:Name="EntryHaslo"

                   IsPassword="True"

                   BackgroundColor="Green"

                   TextColor="White" />

            <Button Text="Zarejestruj się"

                    x:Name="ZarejestrujSieButton"

                    BackgroundColor="Green"

                    TextColor="White"

                    FontAttributes="Bold" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

 